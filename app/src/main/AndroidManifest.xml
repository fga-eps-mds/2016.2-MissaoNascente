<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jbbmobile">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-feature android:name="android.hardware.camera"
        android:required="true" />
    <!--<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" /> -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.example.android.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".view.RegisterScreenActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".view.LoginScreenActivity" />
        <activity
            android:name=".view.StartScreenActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.MainScreenActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.PreferenceScreenActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.ElementScreenActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.AlmanacScreenActivity"
            android:screenOrientation="portrait" />

        <activity android:name=".view.ReadQRCodeScreen"></activity>
    </application>

</manifest>