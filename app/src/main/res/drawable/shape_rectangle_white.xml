<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="6dip" />
            <stroke android:width="3dip" android:color="#E0E0E0" />
            <gradient android:angle="-90" android:startColor="#FFFFFF" android:endColor="#FAFAFA"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="6dip" />
            <stroke android:width="3dip" android:color="#E0E0E0" />
            <solid android:color="#E0E0E0"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="6dip" />
            <stroke android:width="3dip" android:color="#FFFFFF" />
            <gradient android:angle="-90" android:startColor="#FAFAFA" android:endColor="#E0E0E0" />
        </shape>
    </item>
</selector>