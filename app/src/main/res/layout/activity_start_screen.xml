<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_start_screen"
    tools:context="com.example.jbbmobile.view.StartScreenActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="350sp"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/normalSignIn"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/shape_rectangle_green"
            android:elevation="2dp"
            android:text="@string/en_login"
            android:textColor="@android:color/white"
            android:typeface="sans"
            android:textSize="20dp" />

        <Button
            android:id="@+id/googleSignIn"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/shape_rectangle_white"
            android:drawableLeft="@mipmap/ic_google"
            android:elevation="2dp"
            android:text="@string/en_sign_in_with_google"
            android:textSize="12dp" />

        <Button
            android:id="@+id/createAccount"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/shape_rectangle_white"
            android:elevation="2dp"
            android:layout_marginTop="15dp"
            android:text="@string/en_signUp"
            android:textStyle="bold"
            android:textSize="14dp"
            android:typeface="sans" />

    </LinearLayout>

</RelativeLayout>
